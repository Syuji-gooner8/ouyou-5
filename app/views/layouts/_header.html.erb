<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
     
        <div class="navbar-nav ml-auto">
        <% if user_signed_in? %>
            <%= link_to user_path(current_user.id),class:"nav-link text-light p-1" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
            <%=  link_to users_path,class:"nav-link text-light p-1" do %>
              <i class="fas fa-users" aria-hidden="true"></i> Users
            <% end %>
            <%=  link_to books_path ,class:"nav-link text-light p-1" do %>
              <i class="fas fa-book-open" aria-hidden="true"></i> Books
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light p-1" do %>
              <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Log out
            <% end %>

        <% else %>

            <%= link_to root_path,class:"nav-link text-light p-1" do %>
              <i class="fas fa-home"></i> Home
            <% end %>

            <%= link_to about_path,class:"nav-link text-light p-1" do %>
              <i class="fas fa-link" aria-hidden="true"></i> About
            <% end %>
            <%= link_to new_user_registration_path,class:"nav-link text-light p-1" do %>
              <i class="fas fa-user-plus" aria-hidden="true"></i> Sign up
            <% end %>
            <%= link_to user_session_path ,class:"nav-link text-light p-1" do %>
              <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Log in
            <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </nav>
 
  <br><br><br>
</header>

